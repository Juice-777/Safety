@model IEnumerable<Safety.Models.QuestAndAnsw>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Вопросы</h2>

<p>   
    @Html.ActionLink("Добавить вопрос", "Create", new { id = @ViewBag.Id })
</p>
<table class="table">
    <tr>
        <th>
            <b>№</b>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnswerTrue)
        </th>
        <th></th>
    </tr>
    @{
        int counter = 0;
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{
                    counter += 1;
                    <span>@counter</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnswerTrue)
            </td>
            <td>
                @Html.ActionLink("Редакт", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Инфо", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
                    }

</table>
